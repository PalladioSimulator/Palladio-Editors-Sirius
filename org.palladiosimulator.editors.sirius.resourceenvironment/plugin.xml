<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
  <extension point="org.eclipse.sirius.componentization">
    <component class="org.palladiosimulator.editors.sirius.resourceenvironment.Activator"
               id="org.palladiosimulator.editors.sirius.resourceenvironment"
	       name="resourceenvironment">
    </component>
  </extension>
  <extension
         point="org.eclipse.gmf.runtime.diagram.ui.editpolicyProviders">
      <editpolicyProvider
            class="org.palladiosimulator.editors.sirius.resourceenvironment.editpolicyproviders.LinkingResourceEditPolicyProvider">
         <Priority
               name="Highest">
         </Priority>
      </editpolicyProvider>
   </extension>
  <extension
        point="org.eclipse.ui.newWizards">
     <wizard
           category="org.palladiosimulator.pcmbench.palladio_modeling_category"
           class="org.palladiosimulator.editors.sirius.resourceenvironment.wizard.ResourceEnvironmentCreationWizard"
           icon="icons/NewResourceFile.gif"
           id="org.palladiosimulator.editors.sirius.resourceenvironment.wizard.ResourceEnvironmentCreationWizard"
           name="ResourceEnvironment Model and Diagram - Sirius">
     </wizard>
  </extension>
  <extension
        point="org.eclipse.ui.commands">
     <command
           defaultHandler="org.palladiosimulator.editors.sirius.resourceenvironment.toolbar.ResourceEnvironmentCreation"
           id="org.palladiosimulator.editors.sirius.resourceenvironment.toolbar.ResourceEnvironmentCreation"
           name="ResourceEnvironmentCreation">
     </command>
  </extension>
  <extension
        point="org.eclipse.ui.menus">
     <menuContribution
           allPopups="false"
           locationURI="toolbar:org.palladiosimulator.editors.sirius.ui.PCMToolbar?after=System">
        <command
              commandId="org.palladiosimulator.editors.sirius.resourceenvironment.toolbar.ResourceEnvironmentCreation"
              icon="icons/NewResourceFile.gif"
              id="ResourceEnvironment"
              label="Create a new ResourceEnvironment Model and Diagram from scratch"
              style="push"
              tooltip="Create a new ResourceEnvironment Model and Diagram from scratch">
        </command>
     </menuContribution>
  </extension>
</plugin>
